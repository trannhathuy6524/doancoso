@page
@model GotoCarRental.Areas.Admin.Pages.Cars.DeleteModel
@{
    ViewData["Title"] = "Xóa xe";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="bi bi-exclamation-triangle-fill me-2"></i> Xác nhận xóa</h5>
                </div>
                <div class="card-body">
                    <h4 class="card-title mb-3">Bạn có chắc chắn muốn xóa xe này?</h4>
                    <p class="text-danger mb-4">Hành động này không thể hoàn tác. Tất cả dữ liệu liên quan đến xe này sẽ bị xóa vĩnh viễn.</p>
                    
                    <div class="row mb-4">
                        <div class="col-md-3 mb-3 mb-md-0">
                            @if (Model.Car.CarImages != null && Model.Car.CarImages.Any())
                            {
                                <img src="@Model.Car.CarImages.First().ImageUrl" class="img-fluid rounded" alt="@Model.Car.Name" />
                            }
                            else
                            {
                                <div class="bg-light d-flex align-items-center justify-content-center rounded" style="height: 120px;">
                                    <i class="bi bi-image text-muted fs-1"></i>
                                </div>
                            }
                        </div>
                        <div class="col-md-9">
                            <h5 class="mb-2">@Model.Car.Name</h5>
                            <ul class="list-unstyled">
                                <li><strong>Hãng xe:</strong> @Model.Car.Brand.Name</li>
                                <li><strong>Loại xe:</strong> @Model.Car.Category.Name</li>
                                <li><strong>Giá thuê:</strong> @Model.Car.PricePerDay.ToString("N0") VNĐ/ngày</li>
                                <li><strong>Chủ xe:</strong> @Model.Car.User.FullName</li>
                            </ul>
                        </div>
                    </div>
                    
                    <form method="post">
                        <input type="hidden" asp-for="Car.Id" />
                        <div class="d-flex justify-content-end gap-2">
                            <a asp-page="./Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash me-2"></i> Xác nhận xóa
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Thêm Bootstrap Icons CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}
