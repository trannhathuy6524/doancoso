@page
@model GotoCarRental.Areas.Admin.Pages.IndexModel
@{
    ViewData["Title"] = "Quản trị hệ thống";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-6 fw-bold">Bảng điều khiển quản trị</h1>
            <p class="text-muted">Tổng quan về hệ thống và các hoạt động</p>
        </div>
    </div>

    <!-- Thẻ tổng quan -->
    <div class="row mb-4">
        <div class="col-md-4">
            <a asp-area="Admin" asp-page="/MyCars" class="card text-decoration-none text-dark shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="bg-primary bg-opacity-10 p-3 rounded me-3">
                            <i class="bi bi-car-front fs-2 text-primary"></i>
                        </div>
                        <div>
                            <h5 class="card-title mb-1">Xe của tôi</h5>
                            <p class="card-text text-muted mb-0">Quản lý danh sách xe của bạn</p>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <!-- Các card khác -->
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2 text-muted">Tổng phí hoa hồng</h6>
                            <h2 class="card-title mb-0">@Model.TotalCommission.ToString("N0") VNĐ</h2>
                        </div>
                        <div class="bg-success bg-opacity-10 p-3 rounded">
                            <i class="bi bi-cash-coin fs-2 text-success"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent">
                    <a asp-area="Admin" asp-page="/Rentals/Index" class="text-success text-decoration-none">
                        Xem chi tiết <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2 text-muted">Đơn thuê hoàn thành</h6>
                            <h2 class="card-title mb-0">@Model.CompletedRentals</h2>
                        </div>
                        <div class="bg-primary bg-opacity-10 p-3 rounded">
                            <i class="bi bi-check-circle fs-2 text-primary"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent">
                    <a asp-area="Admin" asp-page="/Rentals/Index" asp-route-status="3" class="text-primary text-decoration-none">
                        Xem chi tiết <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>



    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2 text-muted">Tổng số người dùng</h6>
                            <h2 class="card-title mb-0">@Model.TotalUsers</h2>
                        </div>
                        <div class="bg-primary bg-opacity-10 p-3 rounded">
                            <i class="bi bi-people fs-2 text-primary"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        @if (Model.PendingApprovalUsers > 0)
                        {
                            <a asp-area="Admin" asp-page="/Users/Index" class="badge bg-warning text-dark text-decoration-none">
                                @Model.PendingApprovalUsers người dùng chờ duyệt
                            </a>
                        }
                    </div>
                </div>
                <div class="card-footer bg-transparent">
                    <a asp-area="Admin" asp-page="/Users/Index" class="text-primary text-decoration-none">
                        Xem chi tiết <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2 text-muted">Tổng số xe</h6>
                            <h2 class="card-title mb-0">@Model.TotalCars</h2>
                        </div>
                        <div class="bg-success bg-opacity-10 p-3 rounded">
                            <i class="bi bi-car-front fs-2 text-success"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        @if (Model.PendingApprovalCars > 0)
                        {
                            <a asp-area="Admin" asp-page="/Cars/Index" class="badge bg-warning text-dark text-decoration-none">
                                @Model.PendingApprovalCars xe chờ duyệt
                            </a>
                        }
                    </div>
                </div>
                <div class="card-footer bg-transparent">
                    <a asp-area="Admin" asp-page="/Cars/Index" class="text-success text-decoration-none">
                        Xem chi tiết <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2 text-muted">Tổng số hãng xe</h6>
                            <h2 class="card-title mb-0">@Model.TotalBrands</h2>
                        </div>
                        <div class="bg-info bg-opacity-10 p-3 rounded">
                            <i class="bi bi-tag fs-2 text-info"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent">
                    <a asp-area="Admin" asp-page="/Brands/Index" class="text-info text-decoration-none">
                        Xem chi tiết <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2 text-muted">Tổng số loại xe</h6>
                            <h2 class="card-title mb-0">@Model.TotalCategories</h2>
                        </div>
                        <div class="bg-warning bg-opacity-10 p-3 rounded">
                            <i class="bi bi-folder fs-2 text-warning"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent">
                    <a asp-area="Admin" asp-page="/Categories/Index" class="text-warning text-decoration-none">
                        Xem chi tiết <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Các thẻ quản lý nhanh -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light py-3">
                    <h5 class="mb-0">Quản lý nhanh</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <a asp-area="Admin" asp-page="/Users/Index" class="btn btn-outline-primary w-100 py-3">
                                <i class="bi bi-people fs-4 d-block mb-2"></i>
                                Quản lý người dùng
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a asp-area="Admin" asp-page="/Brands/Index" class="btn btn-outline-info w-100 py-3">
                                <i class="bi bi-tag fs-4 d-block mb-2"></i>
                                Quản lý hãng xe
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a asp-area="Admin" asp-page="/Categories/Index" class="btn btn-outline-warning w-100 py-3">
                                <i class="bi bi-folder fs-4 d-block mb-2"></i>
                                Quản lý loại xe
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a asp-area="Admin" asp-page="/Cars/Index" class="btn btn-outline-success w-100 py-3">
                                <i class="bi bi-car-front fs-4 d-block mb-2"></i>
                                Quản lý xe
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a asp-area="Admin" asp-page="/Model3DTemplates/Index" class="btn btn-outline-primary w-100 py-3">
                                <i class="bi bi-cube fs-4 d-block mb-2"></i>
                                Quản lý mô hình 3D
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Thêm Bootstrap Icons CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
}
