<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GotoCarRental</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GotoCarRental.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white  mb-3">
            <div class="container">
                

                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">GotoCarRental</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @* <li class="nav-item"> *@
                        @*     <a class="nav-link text-dark fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Home</a> *@
                        @* </li> *@
                        @* <li class="nav-item"> *@
                        @*     <a class="nav-link text-dark fw-bold" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> *@
                        @* </li> *@
                        @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark fw-bold" asp-area="Admin" asp-page="/Index">
                                    <i class="bi bi-speedometer2"></i> Quản trị
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="Admin" asp-page="/Commissions/Index" class="nav-link">
                                    <i class="bi bi-cash-coin me-2"></i> Quản lý hoa hồng
                                </a>
                            </li>
                        }
                        @if (User.IsInRole("CarOwner"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark fw-bold" asp-area="CarOwner" asp-page="/MyCars">
                                   <i class="bi bi-car-front"></i> Xe của tôi
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark fw-bold" asp-area="CarOwner" asp-page="/Rentals/Index">
                                    <i class="bi bi-calendar-check"></i> Đơn thuê xe
                                </a>
                            </li>
                        }
                        

                        @if (User.IsInRole("Customer"))
                        {
                            
                            
                            
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Customer" asp-page="/Cars/NearbyCars">
                                    <i class="bi bi-geo-alt me-1"></i>Xe gần bạn
                                </a>
                            </li>

                        }

                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container my-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - GotoCarRental - <a asp-area="" asp-controller="Home" asp-action="Privacy">Chính sách</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- Thêm model-viewer -->
    <!-- Thêm model-viewer -->
    @Html.Raw("<script type=\"module\" src=\"https://unpkg.com/@google/model-viewer/dist/model-viewer.min.js\"></script>")


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
